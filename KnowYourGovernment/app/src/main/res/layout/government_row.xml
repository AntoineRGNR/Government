<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="#ffffff">

    <TextView
        android:id="@+id/politicianNameDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:text="CLG Bigfatlk"
        android:textColor="#bf00ff"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageSeparator"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/politicianFunctionDetail" />

    <TextView
        android:id="@+id/politicianFunctionDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="lvl"
        android:textColor="#bf00ff"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageSeparator"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:srcCompat="@drawable/separator"
        android:layout_marginRight="7dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="38dp" />

</android.support.constraint.ConstraintLayout>
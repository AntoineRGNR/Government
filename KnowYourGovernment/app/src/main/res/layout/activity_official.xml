<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bf00ff">

    <TextView
        android:id="@+id/textLocationOfficial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Chicago, IL 60614"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textLocationOfficial"
        app:layout_constraintVertical_bias="1.0"
        android:backgroundTint="#3232ff">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageView
                android:id="@+id/politicianPhoto"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/missingimage"
                android:layout_marginLeft="150dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/politicianParty"
                android:layout_marginStart="150dp" />

            <TextView
                android:id="@+id/politicianFunctionDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="United State President"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/politicianNameDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                android:gravity="center"
                android:text="Javier PASTORE"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/politicianFunctionDetail"
                android:textColor="#ffffff"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/politicianParty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="(Democratic)"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/politicianNameDetail"
                android:textColor="#ffffff"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/politicianAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="Address:"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/politicianPhoto"
                android:textColor="#ffffff"
                android:layout_marginStart="32dp" />

            <TextView
                android:id="@+id/politicianPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="55dp"
                android:text="Phone:"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/politicianAddress"
                android:textColor="#ffffff"
                android:layout_marginStart="32dp" />

            <TextView
                android:id="@+id/politicianEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:text="Email:"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/politicianPhone"
                android:textColor="#ffffff"
                android:layout_marginStart="32dp" />

            <TextView
                android:id="@+id/politicianWebsite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="Website:"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/politicianEmail"
                android:textColor="#ffffff"
                android:layout_marginStart="32dp" />

            <TextView
                android:id="@+id/politicianAddressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:text="20 allee du jardin anglais\n93340\nLe Raincy"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/politicianPhoto"
                android:textColor="#ffffff"
                android:layout_marginStart="150dp" />

            <TextView
                android:id="@+id/oliticianPhoneText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="55dp"
                android:text="06 66 36 28 33"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/politicianAddress"
                android:textColor="#ffffff"
                android:layout_marginStart="150dp" />

            <TextView
                android:id="@+id/politicianEmailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="8dp"
                android:text="antoine.regnier@reseau.eseo.fr"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/oliticianPhoneText"
                android:textColor="#ffffff"
                android:layout_marginStart="150dp" />

            <TextView
                android:id="@+id/politicianWebsiteText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="8dp"
                android:text="psg.com"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/politicianEmailText"
                android:textColor="#ffffff"
                android:layout_marginStart="150dp" />

            <ImageView
                android:id="@+id/youtubeIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/youtube"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/politicianWebsite"
                android:layout_marginLeft="32dp"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteY="438dp"
                tools:layout_editor_absoluteX="105dp" />

            <ImageView
                android:id="@+id/twitterIcon"
                android:layout_width="43dp"
                android:layout_height="43dp"
                app:srcCompat="@drawable/twitter"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/politicianWebsiteText"
                app:layout_constraintLeft_toRightOf="@+id/youtubeIcon"
                android:layout_marginLeft="50dp" />

            <ImageView
                android:id="@+id/googleIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/googleplus"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/politicianWebsiteText"
                app:layout_constraintRight_toLeftOf="@+id/facebookIcon"
                android:layout_marginRight="47dp" />

            <ImageView
                android:id="@+id/facebookIcon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/facebook"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@+id/politicianWebsite"
                android:layout_marginRight="32dp"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="433dp" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>